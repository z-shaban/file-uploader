generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  folders  Folder[]
}

model Folder {
  id         Int    @id @default(autoincrement())
  foldername String @unique
  creator    User   @relation(fields: [creatorId], references: [id])
  creatorId  Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
